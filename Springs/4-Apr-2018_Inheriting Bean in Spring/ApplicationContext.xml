<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id="employee" class="com.indus.Employee">
<constructor-arg value="566" type="int"></constructor-arg>
<constructor-arg value="Sairam" type="String"></constructor-arg>
<constructor-arg value="1.X" type="String"></constructor-arg>
</bean>
<bean id="address" class="com.indus.Address">
<constructor-arg value="Jubilee Hills" type="String"></constructor-arg>
<constructor-arg value="Hyderabad" type="String"></constructor-arg>
<constructor-arg value="Telangana" type="String"></constructor-arg>
<constructor-arg value="India" type="String"></constructor-arg>
</bean>
<bean id="employeebean" class="com.indus.Employee" parent="employee">
<constructor-arg ref="address"></constructor-arg>
</bean>
</beans>